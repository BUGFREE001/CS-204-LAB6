#9


#include <stdio.h>

int* odd(int, int *);

int main()
{
    int i, n;
    
    printf("Please type the array size: ");
    scanf("%d", &n);
    int array[n];
    odd(n, array);
    printf("%d Even Numbers showing below:\n", n);
    for(i = 0; i < n; i++){
      printf("%d ", array[i]);
    }  
    return 0;
}

int* odd(int n, int *array){
    int i;
    for(i = 0; i < n; i++){
       array[i] = 2*i+1;
    }
    return array;
}




