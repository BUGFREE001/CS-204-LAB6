#6


#include <stdio.h>
 
int main()
{
   char sen[100000], spce[10000];
   int i = 0, j = 0;
   printf("Enter a string: \n");
   fgets(sen, sizeof sen, stdin);
 
   while (sen[i] != '\0'){
      if (!(sen[i] == ' ' )) {
        if (sen[i] == '.'){
          sen[i] = ':';
        } 
        spce[j] = sen[i];
        j++;
      }
      i++;
   }
 
   spce[j] = '\0';
   printf("After replacements:\n%s", spce);
 
   return 0;
}




