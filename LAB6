#5

#include <stdio.h>

int main()
{
    char sen[100000];
    int ctr1=0, ctr2=0;
	
    printf("Enter a sentence: ");
    fgets (sen, sizeof sen, stdin);
    
    int s=0;
    for (int i=0; sen[i]!='\0'; i++){
        s += 1;
    }
    
 
    int a[10000];
	for (int i=0; i<s+1; i++){
	  if (sen[i]==' ' || sen[i]=='\0'){
        	ctr1 += 1;
        	a[ctr1-1]=ctr2;
        	ctr2 = 0;
         }
      	  else{
          ctr2 += 1;
        }
    }
    
 
    printf ("Total numbers of words: %d\n", ctr1);
    printf ("Number of characters for each word:");
    
    for (int i=0; i < ctr1; i++){
      if (i==ctr1-1){
          a[i]-=1;
      }
      printf ("%d ", a[i]);
    }
    
	return 0;
}



