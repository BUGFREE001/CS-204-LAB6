#8



#include <stdio.h>

void fac(int,int*);

int main()
{
  int r;
  int m;
      printf("Input a number : ");
      scanf("%d",&m);		 
  
  
  fac(m,&r);
  printf("%d's factorial is: %d \n\n",m,r);
  return 0;
}

void fac(int n,int *f){
      int i;
      *f =1;
      for(i=1;i<=n;i++)
      *f=*f*i;
    }




