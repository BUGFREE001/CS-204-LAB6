#10



#include<stdio.h>
#include<string.h>

int main()
{
  int i,j,n;

  char str[1000][1000],s[1000];
  printf("Please give the number of names:\n");
  scanf("%d",&n);

  printf("Enter names:\n");
  for(i=0;i<n;i++){
    scanf("%s",str[i]);
  }
  for(i=0;i<n;i++){
   for(j=i+1;j<n;j++){
     if(strcmp(str[i],str[j])>0){
       strcpy(s,str[i]);
       strcpy(str[i],str[j]);
       strcpy(str[j],s);
     } 
   }
  }
  
  printf("\nAfter sorted:\n");
  for(i=0;i<n;i++){
    printf("%s\n",str[i]);
  }
  return 0;
}


