#4

#include <stdio.h>

int main()
{
    char s[100000];
    char rvrs[100000];
    char *sptr = s; 
    char *rptr = rvrs; 

    int i = -1;

    printf("Input a string: ");
    scanf("%s", s);

    while(*sptr)
    {
        sptr++;
        i++; 
    }

    while(i >= 0)
    {
        sptr--; 
        *rptr = *sptr;  
        rptr++; 
        i--;    
    }

    *rptr = '\0'; 
    rptr = rvrs; 

    printf("\nThe reverse of the string is: %s ", rvrs);

    return 0;
}



