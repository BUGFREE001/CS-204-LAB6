#7


#include <stdio.h>
int main() {
char s1[100] = "computer ", s2[] = "programming";
int i, j;
printf("\nFirst string is :");
puts(s1);
printf("\nSecond string is :");
puts(s2);
for (i = 0; s1[i] != '\0'; ++i);
// concatenating each character of s2 to s1
for (j = 0; s2[j] != '\0'; ++j, ++i) {
s1[i] = s2[j];
}

s1[i] = '\0';
printf("After concatenation: ");
puts(s1);
return 0;
}




