#4

#include <stdio.h>

void reverse(char* str){
    int i = 0;
    char *p = str, *q;
    char ch;
    while(str[i]!='\0'){
        i++;
    }
    q = str+i-1;
    
    while(p<q){
        ch = *p;
        *p = *q;
        *q = ch;
        p++;
        q--;
    }
}

int main()
{
    char str[100];
    printf("Input a string: ");
    scanf("%s",str);
    reverse(str);
    printf("Reverse of the string is: %s",str);
    return 0;
}



